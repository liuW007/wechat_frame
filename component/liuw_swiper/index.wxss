/* components/liuw_swiper/index.wxss */
.liuw_swiper{
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}
.liuw_swiper_image{
  width: 100%;
  height: 340rpx;
  box-shadow: -4rpx 4rpx 10rpx lightgray;
  border-radius:20rpx;
  overflow:hidden;
}
.liuw_swiper_index{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 5rpx;
}